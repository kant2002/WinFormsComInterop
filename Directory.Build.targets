<Project>
  <PropertyGroup>
    <DotnetInstallLocation>C:\Program Files\dotnet</DotnetInstallLocation>
    <DotnetInstallLocation Condition="$(CI) == true">C:\Users\runneradmin\AppData\Local\Microsoft\dotnet</DotnetInstallLocation>
  </PropertyGroup>
  <ItemGroup>
    <Reference Update="Accessibility" Condition="$(TargetFramework) != 'net5.0'">
      <HintPath>$(DotnetInstallLocation)\shared\Microsoft.WindowsDesktop.App\6.0.10\Accessibility.dll</HintPath>
    </Reference>
    <Reference Update="Accessibility" Condition="$(TargetFramework) == 'net5.0'">
      <HintPath>$(DotnetInstallLocation)\shared\Microsoft.WindowsDesktop.App\5.0.17\Accessibility.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>